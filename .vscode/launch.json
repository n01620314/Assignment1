{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Next.js Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "http://localhost:3000",
        "uriFormat": "http://localhost:3000",
        "action": "openExternally"
      }
    }
  ]
}